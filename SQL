-- USER 테이블: 사용자 권한 정보
CREATE TABLE USER (
    USER_ID INT AUTO_INCREMENT PRIMARY KEY COMMENT '사번 (고유 ID)',
    USER_NAME VARCHAR(100) NOT NULL COMMENT '사용자 이름',
    PHONE VARCHAR(020) COMMENT '연락처',
    AUTH_CODES TEXT COMMENT '보유 권한 코드 (,로 구분된 STD_CD 목록)',
    REG_DT DATETIME DEFAULT CURRENT_TIMESTAMP COMMENT '등록일'
) COMMENT='사용자 테이블';



-- CODE 테이블: 서비스 코드별 담당자 정보
CREATE TABLE CODE (

    STD_CD VARCHAR(50) NOT NULL COMMENT '표준서비스코드',
    STD_NM VARCHAR(100) NOT NULL COMMENT '표준서비스명',
    USTD_CD VARCHAR(50) NOT NULL COMMENT '단위서비스코드',
    USTD_NM VARCHAR(100) NOT NULL COMMENT '단위서비스명',
    ap_CD VARCHAR(50) DEFAULT NULL COMMENT 'AP 담당자 사번',
    ap_NM VARCHAR(50) DEFAULT NULL COMMENT 'AP 담당자 이름',
    ba_CD VARCHAR(50) DEFAULT NULL COMMENT 'BA 담당자 사번',
    ba_NM VARCHAR(50) DEFAULT NULL COMMENT 'BA 담당자 이름',
    po_CD VARCHAR(50) DEFAULT NULL COMMENT 'PO 담당자 사번',
    po_NM VARCHAR(50) DEFAULT NULL COMMENT 'PO 담당자 이름',
    PRIMARY KEY (STD_CD)
) COMMENT='서비스별 담당자 및 코드 정보';
